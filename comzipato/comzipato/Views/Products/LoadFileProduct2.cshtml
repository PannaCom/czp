@model List<comzipato.Models.product_file>

@if (Model != null)
{
    int count = 0;
    if (Model.Count > 0)
    {
        
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>no</th>
                        <th>download</th>
                        <th>title</th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><a href="@item.file_path">Link</a></td>
                            <td>@item.title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

